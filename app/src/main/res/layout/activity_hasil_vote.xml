<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dhasil">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <View
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="3dp"
        android:background="@color/blue"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hasil"
            android:textAlignment="center"
            android:textColor="@color/darkColor"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/vote1"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_weight="1"
            android:src="@drawable/vote1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paslon01"
            android:textColor="@color/blue"
            android:textSize="20dp"
            android:padding="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rincianVotePaslon01"
            android:textColor="@color/successColor"
            android:textSize="28dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <!-- This adds a border between the TextViews -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/darkColor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paslon02"
            android:textColor="@color/blue"
            android:textSize="20dp"
            android:padding="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rincianVotePaslon02"
            android:textColor="@color/successColor"
            android:textSize="28dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <!-- This adds a border between the TextViews -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/darkColor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/golput"
            android:textColor="@color/blue"
            android:textSize="20dp"
            android:padding="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rincianVoteGolput"
            android:textColor="@color/successColor"
            android:textSize="28dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <!-- This adds a border between the TextViews -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/darkColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/successColor"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PEMENANGNYA ADALAH"
                android:textAlignment="center"
                android:textColor="@color/lightColor"
                android:textSize="24dp"
                android:textStyle="bold"
                />

            <!-- This adds a border between the TextViews -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="3dp"
                android:background="@color/lightColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pemenangnya"
                android:textColor="@color/warningColor"
                android:textSize="28dp"
                android:layout_marginVertical="10dp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rincianVotePemenang"
                android:textColor="@color/warningColor"
                android:textSize="26dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/presentasKemenangan"
                android:textColor="@color/warningColor"
                android:textSize="38dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>